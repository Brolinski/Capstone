@using Scheduler.Web.Controllers;
@using Scheduler.Web.Extensions;

@{
    this.Layout = "_Layout";

    string? userId = this.ViewContext.RouteData.Values["id"] as string;
}

<div class="row mb-3 w-75 m-auto">
    <aside class="col-sm-3">
        <a asp-action="Profile"
           asp-route-id="@userId"
           class="list-group-item list-group-item-action @this.Html.SelectedLink("Profile")">
            Profile <i class="bi bi-question-circle" data-bs-toggle="tooltip" data-bs-placement="right" title="Change your Personal Info."></i>
        </a>
        <a asp-action="Security"
           asp-route-id="@userId"
           class="list-group-item list-group-item-action @this.Html.SelectedLink("Security")">
            Security <i class="bi bi-question-circle" data-bs-toggle="tooltip" data-bs-placement="right" title="Change your Password."></i>
        </a>
    </aside>
    <div class="col-sm-9">
        @this.RenderBody()
    </div>
</div>