@model IEnumerable<Event>;

@{
    IEnumerable<Team> coachTeams = (IEnumerable<Team>)this.ViewData["CoachTeams"];
    IEnumerable<Team> teams = (IEnumerable<Team>)this.ViewData["Teams"];
    string type = (string)this.ViewData["EventType"];
    string typeFilterMessage = (string)ViewData["TypeFilterMessage"];
    string nameFilterMessage = (string)ViewData["NameFilterMessage"];
    string teamFilterMessage = (string)ViewData["TeamFilterMessage"];

}

@if (Model != null && Model.Count() > 0)
{
    if (typeFilterMessage != "")
    {
        <h5 class="text-center lead text-danger">@typeFilterMessage</h5>
    }
    if (nameFilterMessage != "")
    {
        <h5 class="text-center lead text-danger">@nameFilterMessage</h5>
    }
    if (teamFilterMessage != "")
    {
        <h5 class="text-center lead text-danger">@teamFilterMessage</h5>
    }
    <br />
    @foreach (Team team in coachTeams)
    {
        bool load = false;
        foreach (Event e in Model)
        {
            if (e is Game game)
            {
                if (game.HomeTeamId == team.Id || game.OpposingTeamId == team.Id)
                {
                    load = true;
                }
            }
            if (e is Practice practice)
            {
                if (practice.TeamId == team.Id)
                {
                    load = true;
                }
            }
        }
        if (load)
        {
            string caption = $"{type}s for Team {team.Name}";

            <h5 class="text-center text-danger">@caption</h5>
            <table class="table-bordered w-100 m-auto text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Location</th>
                        <th>Team 1</th>
                        <th>Team 2</th>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <th>Details</th>
                        }
                    </tr>
                </thead>
                @foreach (Event e in Model)
                {
                    if (e is Game game)
                    {
                        if (game.HomeTeamId == team.Id || game.OpposingTeamId == team.Id)
                        {
                            <tr>
                                <td>@e.Name</td>
                                <td>@this.Html.DisplayFor(x => e.StartDate)</td>
                                <td>@this.Html.DisplayFor(x => e.EndDate)</td>
                                <td>@e.Field?.Name</td>
                                @{
                                    Team? homeTeam = teams.FirstOrDefault(t => t.Id == game.HomeTeamId);
                                    Team? awayTeam = teams.FirstOrDefault(t => t.Id == game.OpposingTeamId);
                                }
                                <td>@homeTeam.Name</td>
                                <td>@awayTeam.Name</td>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <td>
                                        <a asp-action="Details" asp-controller="Schedule" asp-route-id="@e.Id" class="btn btn-sm btn-primary">Details</a>
                                    </td>
                                }
                            </tr>
                        }
                    }
                    else if (e is Practice practice)
                    {
                        if(practice.TeamId == team.Id)
                        {
                            <tr>
                                <td>@e.Name</td>
                                <td>@this.Html.DisplayFor(x => e.StartDate)</td>
                                <td>@this.Html.DisplayFor(x => e.EndDate)</td>
                                <td>@e.Field?.Name</td>

                                    @{
                                        Team? homeTeam = teams.FirstOrDefault(t => t.Id == practice.TeamId);
                                    }

                                <td>@homeTeam.Name</td>
                                <td class="bg-secondary"></td>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                    <td>
                                        <a asp-action="Details" asp-controller="Schedule" asp-route-id="@e.Id" class="btn btn-sm btn-primary">Details</a>
                                    </td>
                                    }
                            </tr>
                        }
                    }
                }
            </table>
            <br />
            <br />
        }
    }
}
else if (teamFilterMessage != null || nameFilterMessage != null || typeFilterMessage != null)
{
<h5 class="text-center lead text-danger">@typeFilterMessage</h5>
<h5 class="text-center lead text-danger" style="white-space: pre-wrap">@teamFilterMessage</h5>
<h5 class="text-center lead text-danger">@nameFilterMessage</h5>
}
else
{
    string message = $"You have no {type}s scheduled";

<h5 class="text-center lead text-danger">@message</h5>
}