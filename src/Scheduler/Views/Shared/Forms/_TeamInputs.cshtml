@using Newtonsoft.Json;
@using Scheduler.Infrastructure.Persistence;
@using Scheduler.Infrastructure.Extensions;
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@using Scheduler.Domain.Repositories;
@using Scheduler.Domain.Specifications;

@inject ILeagueRepository LeagueRepository
@inject UserManager<User> userManager;
@model Team

@if (this.Model is not null)
{
    <input hidden asp-for="Id" />
}
@{
    var userList = userManager.Users
        .Select(user => new SelectListItem
                {
                    Text = string.Join(" ", user.FirstName, user.LastName),
                    Value = user.Id.ToString(),
                    Selected = Model != null && Model.UserId == user.Id
                })
        .ToList();
    userList.Add(new SelectListItem { Text = "Visiting Coach", Value = null, Selected = false });
}

<div class="row mb-3">
    <div class="col-sm-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> 
    </div>

    <div class="col-sm-6">
        <label asp-for="UserId" class="form-label">Coach</label>
        <select asp-for="UserId" class="form-select">
            @foreach (var user in userList)
            {
                <option value=@user.Value>@user.Text</option>
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="col-sm-6">
        <label asp-for="LeagueId" class="form-label"></label>
        <select class="form-select"
                asp-for="LeagueId"
                asp-items="(await this.LeagueRepository.SearchAsync(new GetAllSpecification<League>()))
                    .Select(league => new SelectListItem
                    {
                        Text = league.Name,
                        Value = league.Id.ToString(),
                        Selected = this.Model is not null &&
                                   this.Model.League is not null
                    })"></select>
        <span asp-validation-for="LeagueId" class="text-danger"></span>
    </div>
</div>

<div class="row mb-3">
    <div class="col-6">
        <a asp-action="Teams"
           asp-controller="Dashboard"
           class="btn btn-lg btn-danger w-100">
            Cancel
        </a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-lg btn-primary w-100">
            Submit
        </button>
    </div>
</div>