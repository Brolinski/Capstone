@using Scheduler.Web.Extensions;

@{
	this.Layout = "_Layout";
}

<div class="dash-buttons m-auto">
	<div class="list-group list-group-horizontal text-center">
		<a asp-action="Events"
		   class="list-group-item list-group-item-action @this.Html.SelectedLink("Events")">
			Calendar
		</a>
		<a asp-action="Leagues" class="list-group-item list-group-item-action @this.Html.SelectedLink("Leagues")">
			Leagues
		</a>
		@if (this.User.IsInRole(Role.ADMIN))
		{
			<a asp-action="Fields"
			   class="list-group-item list-group-item-action @this.Html.SelectedLink("Fields")">
				Fields
			</a>
			<a asp-action="Users"
			   class="list-group-item list-group-item-action @this.Html.SelectedLink("Users")">
				Users
			</a>
		}
	</div>
</div>
<div id="layoutContainer w-100 m-auto">
	@this.RenderBody()
</div>

@section Scripts {
	@await this.RenderSectionAsync("Scripts", false)
}