@model IEnumerable<Field>

@{
    this.ViewData["Title"] = "Fields";
}

<div class="text-center mb-3 mt-3">
    <div class="linkElement">
        <a asp-action="Add" asp-controller="Field" class="mainButton">
            Add New Field
        </a>
    </div>
</div>

<div class="row m-auto">
    @foreach (var field in this.Model)
    {
        <div class="col-lg-3 mb-3 field-card">
            <div class="card border border-3 border-success">
                <img src="~/Images/field.png" loading="lazy" alt="@field.Name" class="card-img-top rounded-0">
                <div class="card-body">
                    <h5 class="text-center">@field.Name</h5>
                    <div class="row">
                        <div class="col mb-2 text-center">
                            <form action="@this.Url.Action("Details", "Field", new { id = field.Id })" method="get">
                                <button type="submit" class="button buttonRedOutline w-100">Update</button>
                            </form>
                        </div>
                        <div class="col mb-2 text-center">
                            <div class="linkElement">
                                <button type="button" class="button buttonRed" data-bs-toggle="modal" data-bs-target="#remove@(field.Id)">
                                    Remove
                                </button>
                            </div>
                            <div class="modal fade" id="remove@(field.Id)" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">@field.Name</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to remove <b>@(field.Name)</b>?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="button buttonRedOutline" data-bs-dismiss="modal">Close</button>
                                            <form asp-action="Remove"
                                                  asp-controller="Field"
                                                  asp-route-id="@field.Id"
                                                  method="post">
                                                <input type="submit" value="Remove" class="button buttonRed" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>