@using Scheduler.Web.Controllers
@{
    ViewData["Title"] = "Admin Dashboard";
}


<div class="row">
    <div class="col-sm-6 mx-auto">
        <h1 class="text-center">
            @this.ViewData["Title"]
        </h1>
        <hr />
    </div>
</div>

<div class="row mb-3">

    <!--Current Scheduled Games-->
    <div class="col-sm-6">
        <div class="container mb-2">
                <div>
                    <h3>Current Scheduled Events</h3>
                </div>
            <div class="row mb-1">
                <div class="col-sm-7 mb-2">
                    <input class="w-100 form-control"/>
                </div>
                <div class="col-2 mb-2">
                    <button class="btn-sm btn-primary">
                        Edit
                    </button>
                </div>
                <div class="col-2 mb-2">
                    <button class="btn-sm btn-danger">
                        Delete
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-12 border border-2 w-100 searchContainer">
                </div>
            </div>
        </div>
    </div>

    <!--Search by field-->
    <div class="col-sm-6">
        <div class="container mb-2">
            <div>
                <h3>Search by Field</h3>
            </div>
            <div class="row mb-1">
                <div class="col-sm-6 mb-2">
                    <input class="w-100 form-control" />
                </div>
                <div class="col-2 mb-2">
                    <button class="btn-sm btn-primary">
                        Edit
                    </button>
                </div>
                <div class="col-2 mb-2">
                    <button class="btn-sm btn-danger">
                        Delete
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-12 border border-2 w-100 searchContainer">
                </div>
            </div>
        </div>
    </div>
</div>

<!--Bottom Buttons-->
<div class="row">
    <div class="col-sm-8 mx-auto">
        <h3 class="text-center">
            Fields
        </h3>
        <hr />
    </div>
</div>
<div class="row mb-4">
    <div class="col-sm-2 mx-auto">
        <a asp-controller="Field" asp-action="Index" class="btn btn-primary w-100">
            Manage Fields
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-8 mx-auto">
        <h3 class="text-center">
            Teams
        </h3>
        <hr />
    </div>
</div>
<div class="row mb-4">
    <div class="col-sm-2 mx-auto">
        <a asp-controller="Team" asp-action="Index" class="btn btn-primary w-100">
            Manage Teams
        </a>
    </div>
</div>