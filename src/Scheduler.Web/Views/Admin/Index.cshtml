@using Scheduler.Web.Controllers
@{
    ViewData["Title"] = "Admin Dashboard";
}


<div class="m-auto text-danger">
    <h1 class="text-center">
        @this.ViewData["Title"]
    </h1>
</div>


<hr />

<!--Top Buttons-->
<div class="row w-75 text-center m-auto">
    <div class="col-sm-3 m-auto">
        <a asp-controller="Field" asp-action="Index" class="btn btn-sm btn-primary">
            Manage FIELDS
        </a>
    </div>
    <div class="col-sm-3 m-auto">
        <a asp-controller="Team" asp-action="Index" class="btn btn-sm btn-primary">
            Manage TEAMS
        </a>
    </div>
    <div class="col-sm-3 m-auto">
        <a asp-controller="Schedule" asp-action="Index" class="btn btn-sm btn-primary">
            Manage EVENTS
        </a>
    </div>
    <div class="col-sm-3 m-auto">
        <a asp-controller="Identity" asp-action="ManageUsers" class="btn btn-sm btn-primary">
            Manage USERS
        </a>
    </div>
</div>


<hr />

