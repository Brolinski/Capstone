@using Microsoft.AspNetCore.Identity;
@using Scheduler.Core.Models.Identity;
@using Scheduler.Web.ViewModels;
@using Scheduler.Web.Controllers;

@model IEnumerable<User>
@inject UserManager<User> userManager;

@{
    this.ViewData["Title"] = "Manage Users";
}

<div>
    <h1 class="text-center text-danger">
        @this.ViewData["Title"]
    </h1>
</div>
<hr />

<div class="w-75 m-auto">
    <div class="text-start">
        <a asp-action="@nameof(IdentityController.Register)"
           class="btn btn-sm btn-primary">
            Add New User
        </a>
    </div>
    <hr />
    <table class="table table-sm">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Is Admin</th>
                <th scope="col" colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in this.Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@if (userManager.IsInRoleAsync(user, Role.ADMIN).Result == true)
                    {
                        <span>Yes</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="@nameof(IdentityController.Profile)"
                       asp-route-id="@user.Id"
                       class="btn btn-sm btn-secondary">Update</a>
                </td>
                <td class="text-start">
                    @if (userManager.GetUserAsync(User).Result?.Id != user.Id)
                    {
                       <form asp-action="@nameof(IdentityController.Delete)"
                             asp-route-id="@user.Id"
                             method="post">
                            <button type="submit"
                                    class="btn btn-sm btn-danger">

                                Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<hr />
<div class="text-center">
    <a asp-controller="Admin" asp-action="Index"
       class="btn btn-sm btn-dark">
        Back to Dashboard
    </a>
</div>