@using Scheduler.Web.ViewModels;
@using Scheduler.Web.Controllers;

@model IEnumerable<ManageUserViewModel>

@{
    this.ViewData["Title"] = "Manage Users";
}

<div class="w-75 m-auto">
    <table class="table table-sm">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Is Admin</th>
            <th scope="col" colspan="2" class="text-center">Actions</th>
        </tr>
        @foreach (var user in this.Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@if (user.IsAdmin)
                    {
                        <span>Yes</span>
                    }
                </td>
                <td>
                    <a asp-action="@nameof(IdentityController.Update)"
                   asp-route-id="@user.Id"
                   class="btn btn-sm btn-secondary">Update</a>
                </td>
                <td>
                    <form asp-action="@nameof(IdentityController.Delete)"
                   asp-route-id="@user.Id"
                   method="post">
                        <button type="submit"
                            class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-start">
        <a asp-action="@nameof(IdentityController.Register)"
           class="btn btn-sm btn-primary">
            Add New User
        </a>
    </div>
    <div class="text-center">
        <a asp-controller="Admin" asp-action="Index"
           class="btn btn-sm btn-dark">
            Back to Dashboard
        </a>
    </div>
</div>