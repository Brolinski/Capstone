@{
    string currentType = this.ViewData["EventType"] as string ?? nameof(Event);
    string pageTitle = $"Schedule {currentType}";
    string[] eventTypes = new[] { nameof(Event), nameof(Practice), nameof(Game) };

    this.ViewData["Title"] = pageTitle;
}

<div class="row">
    <form asp-action="Create@(currentType)"
          method="post"
          class="col-12">

        <div class="row mb-3">
            <h1 class="text-center text-danger">
                @pageTitle
            </h1>
            <hr />

            <div class="col-sm-4 mx-auto">
                <div class="list-group list-group-horizontal">
                    @foreach (var eventType in eventTypes)
                    {
                        <button type="button"
                                id="@eventType"
                                onclick="navClick('@eventType')"
                                class="list-group-item list-group-item-action text-center">
                            @eventType
                        </button>
                    }
                </div>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @await this.Html.PartialAsync("Forms/_EventInputs")
    </form>
</div>

@section Scripts {
    <script src="~/js/EventForm.js"></script>
    <partial name="_ValidationScriptsPartial" />
}