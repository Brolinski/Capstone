@using Scheduler.Core.Models;

@{
    string eventType = this.ViewData["EventType"] as string ?? "Event";
    string pageTitle = $"Schedule {eventType}";

    this.ViewData["Title"] = pageTitle;
}

<div class="row">
    <form action="../@eventType/Create"
          method="post"
          class="col-12">

        <div class="row mb-3">
            <h1 class="text-center">
                @pageTitle
            </h1>
            <hr />
            <div class="col-sm-4 mx-auto">
                @await this.Html.PartialAsync("Navigation/_ScheduleNavbar")
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @await this.Html.PartialAsync("Forms/_EventInputs")
    </form>
</div>