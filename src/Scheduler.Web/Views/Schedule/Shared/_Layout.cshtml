@using Microsoft.AspNetCore.Identity;
@using Scheduler.Core.Models;
@using Scheduler.Core.Services;
@using Scheduler.Web.Controllers;
@using Scheduler.Web.Controllers.Schedule;
@using System.Security.Claims;

@inject IFieldService FieldService

@model Event

@{
    this.Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <form method="post">
            <h1 class="text-center">
                Schedule @this.ViewData["Title"]
            </h1>
            <hr />

            <input asp-for="UserId"
                   type="hidden"
                   value="@this.User.FindFirst(ClaimTypes.NameIdentifier).Value" />

            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="IsRecurring" type="checkbox" class="form-check-input">
                        <label asp-for="IsRecurring" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="list-group list-group-horizontal mb-3">
                        @this.Html.ActionLink(
                            nameof(Event),
                            "Create",
                            nameof(Event),
                            this.Model,
                            new { @class = "list-group-item list-group-item-action" })
                        @this.Html.ActionLink(
                            nameof(Practice),
                            "Create",
                            nameof(Practice),
                            this.Model,
                            new { @class = "list-group-item list-group-item-action" })
                        @this.Html.ActionLink(
                            nameof(Game),
                            "Create",
                            nameof(Game),
                            this.Model,
                            new { @class = "list-group-item list-group-item-action" })
                    </div>

                    <div class="mb-3">
                        <label asp-for="FieldIds" class="form-label"></label>
                        <select class="form-select"
                                multiple
                                size="6"
                                asp-for="FieldIds"
                                asp-items="this.FieldService
                                            .GetAllAsync()
                                            .Result
                                            .Select(field => new SelectListItem
                                            {
                                                Text = field.Name,
                                                Value = field.Id.ToString()
                                            })"></select>
                    </div>

                    @this.RenderBody()
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <a asp-action="@nameof(ScheduleController.Index)"
                       asp-controller="Schedule"
                       class="btn btn-lg btn-danger w-100">
                        Cancel
                    </a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-lg btn-primary w-100">
                        Schedule
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>