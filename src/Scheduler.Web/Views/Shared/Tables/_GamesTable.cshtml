@using Scheduler.Core.Services;

@inject IRepository<Team> TeamService
@model Game

@{
    this.Model.HomeTeam ??= await this.TeamService.GetAsync(this.Model.HomeTeamId);
    this.Model.OpposingTeam ??= await this.TeamService.GetAsync(this.Model.OpposingTeamId);
}

<p class="card-text">
    <h5>Who</h5>
    @this.Model.HomeTeam.Name vs. @this.Model.OpposingTeam.Name
</p>