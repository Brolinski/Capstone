@using Scheduler.Web.Controllers;

@model IEnumerable<Game>

@foreach (var game in this.Model)
{
    <div class="col-sm-6">
        <div class="card border border-3 border-secondary">
            <div class="card-body">
                <h4 class="card-title">@game.Name</h4>
                <p class="card-text">
                    <h5>When:</h5>
                    @game.StartDate to @game.EndDate
                </p>
                <p class="card-text">
                    <h5>Where:</h5>
                    @foreach (var field in game.Fields)
                    {
                        @field.Name
                        <br />
                    }
                </p>
                <p class="card-text">
                    <h5>Who:</h5>
                    @game.HomeTeamId vs. @game.OpposingTeam
                </p>

                <div class="row">
                    <div class="col-6">
                        <a asp-action="@nameof(ScheduleController.Update)"
                           asp-controller="Schedule"
                           asp-route-id="@game.Id"
                           asp-route-type="@game.GetType().Name"
                           class="btn btn-sm btn-secondary w-100">
                            Update
                        </a>
                    </div>
                    <div class="col-6">
                        <form asp-action="@nameof(ScheduleController.Delete)"
                              asp-controller="Schedule"
                              asp-route-id="@game.Id"
                              method="post">
                            <button class="btn btn-sm btn-danger w-100">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}