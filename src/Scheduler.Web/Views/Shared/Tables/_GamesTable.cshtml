@using Scheduler.Web.Persistence;
@using Scheduler.Web.Extensions;

@inject SchedulerContext Scheduler
@model Game

@{
    this.Model.HomeTeam ??= await this.Scheduler.GetAsync<Team>(this.Model.HomeTeamId);
    this.Model.OpposingTeam ??= await this.Scheduler.GetAsync<Team>(this.Model.OpposingTeamId);
}

<p class="card-text">
    <h5>Who</h5>
    @this.Model.HomeTeam.Name vs. @this.Model.OpposingTeam.Name
</p>