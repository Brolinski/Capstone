@using Scheduler.Web.Controllers;

@model IEnumerable<Team>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="@nameof(TeamController.Create)"
           asp-controller="Team"
           class="btn btn-primary">
            Add new
        </a>
    </div>
</div>

<div class="row">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">League</th>
                <th scope="col" colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in this.Model)
            {
                <tr>
                    <th scope="row">@team.Name</th>
                    <td>@(team.League is null ? string.Empty : team.League.Name)</td>
                    <td class="text-end">
                        <a asp-action="@nameof(TeamController.Update)"
                           asp-controller="@nameof(Team)"
                           asp-route-id="@team.Id"
                           class="btn btn-sm btn-secondary me-3">
                            Update
                        </a>
                    </td>
                        <td class="text-start">
                            <form asp-action="@nameof(FieldController.Delete)"
                                  asp-controller="@nameof(Team)"
                                  asp-route-id="@team.Id"
                                  method="post">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete @team.Name?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>