@using Scheduler.Web.Extensions;

@{
    this.Layout = "_Layout";
}

<div class="row w-75 m-auto">
    <aside class="col-sm-2">
        <a asp-action="Events"
           class="list-group-item list-group-item-action @this.Html.SelectedLink("Events")">
            Events
        </a>
        <a asp-action="Teams"
           class="list-group-item list-group-item-action @this.Html.SelectedLink("Teams")">
            Teams
        </a>
        @if (this.User.IsInRole(Role.ADMIN))
        {
            <a asp-action="Fields"
               class="list-group-item list-group-item-action @this.Html.SelectedLink("Fields")">
                Fields
            </a>
            <a asp-action="Users"
               class="list-group-item list-group-item-action @this.Html.SelectedLink("Users")">
                Users
            </a>
        }
    </aside>
    <div class="col-sm-10" id="layoutContainer">
        @this.RenderBody()
    </div>
</div>
<div id="calendar">
    @(
        await Component.InvokeAsync("Calendar")
        )
</div>

@section Scripts {
    @await this.RenderSectionAsync("Scripts", false)
}