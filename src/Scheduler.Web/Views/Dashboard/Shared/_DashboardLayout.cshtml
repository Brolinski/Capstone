@using Scheduler.Core.Models.Identity;

@{
    this.Layout = "_Layout";

    List<string> navItems = new() { "Events", "Teams" };

    if (this.User.IsInRole(Role.ADMIN))
        navItems.AddRange(new[] { "Fields", "Users" });
}

<div class="row w-75 m-auto">
    <aside class="col-sm-2">
        @await this.Component.InvokeAsync(
            "Navigation",
            new { navItems })
    </aside>
    <div class="col-sm-10" id="layoutContainer">
        @this.RenderBody()
    </div>
</div>

@section Scripts {
    @this.RenderSectionAsync("Scripts", false)
}